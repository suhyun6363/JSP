<title>계산기</title>
<script src="js/jquery-3.6.4.min.js"></script>
<script>
$(document).ready(function() {
	  $("#b1").click(function() {
		  $.ajax({
			   type: "post",
			   url: "calProHome.jsp",
			   data: {name:$("#t1").val(), sid:$("#t2").val()},
			   success: function(data) {
				 $("#result").html(data);
				 alert("로드성공");
			   },
			   error: function() {
				 alert("로드실패");
			   }
	  	  });
	  });
});
</script>
</head>
